<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@null">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:cardCornerRadius="3dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:weightSum="8">

            <!-- <ImageView
                android:id="@+id/iv_agrupacion_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"/>-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/fab_margin_half"
                android:paddingTop="@dimen/recylerview_margin_y"
                android:paddingBottom="@dimen/recylerview_margin_y">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="4dp"
                    android:orientation="vertical">

                    <!--START OF RIGHT TOP AREA-->
                    <TextView
                        android:id="@+id/tv_evento_local"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="1dp"
                        android:background="#FFFFFF"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/fab_margin_half"
                        android:text="Heading"
                        android:textSize="@dimen/heading_small"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_evento_fecha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/fab_margin_half"
                            android:text="fecha:"
                            android:textSize="@dimen/heading_x_small" />


                        <TextView
                            android:id="@+id/tv_evento_direccion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/fab_margin_half"
                            android:text="Direcion:"
                            android:textSize="@dimen/heading_x_small" />
                        <TextView
                            android:id="@+id/tv_evento_hora"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/fab_margin_half"
                            android:text="hora:"
                            android:textSize="@dimen/heading_x_small" />

                        <TextView
                            android:id="@+id/tv_evento_tipos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/fab_margin_half"
                            android:text="tipo:"
                            android:textSize="@dimen/heading_x_small" />

                        <TextView
                            android:id="@+id/tv_evento_estado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/fab_margin_half"
                            android:text="estado:"
                            android:textSize="@dimen/heading_x_small" />


                    </LinearLayout>
                    <!--END OF RIGHT TOP AREA-->


                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
